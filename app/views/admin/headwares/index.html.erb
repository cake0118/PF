<div class="container">
  <div class="row my-3">
    <h2>新規投稿</h2>
  </div>

  <div class="row my-3">

    <%= form_with model: @headware, url: admin_headwares_path do |f| %>
      <%= f.label :ハード名 %>
      <%= f.text_field :name, placefolder: "ハード名" %>
      <%= f.submit "新規登録" %>
    <% end %>

  </div>

  <div class="row my-3">
    <table class="table">

      <thead>
        <tr>
          <th scope="col">ハード名</th>
        </tr>
      </thead>

      <tbody>
        <% @headwares.each do |headware| %>
          <tr>
            <td><%= headware.name %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>

</div>